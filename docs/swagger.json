          "password",
          "gender",
          "photo",
          "weight",
          "activeTime",
          "dailyNorm"
        ],
        "properties": {
          "_id": {
            "description": "Backend-generated unique identifier.",
            "type": "string",
            "example": "66d7503af64e3c25c739120f"
          },
          "name": {
            "description": "User name",
            "type": "string",
            "example": "John Wick",
            "default": null
